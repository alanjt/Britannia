		<menubar include="Dialogs/menu.xml"/> 
		<menubar>
			<default>
				<menu n="10">
					<label>Britannia</label>
					<enabled type="bool">true</enabled>
					<item>
						<label>Select Livery</label>
						<binding>
							<command>nasal</command>
							<script>aircraft.livery.dialog.toggle()</script>
						</binding>
					</item>
				</menu>
			</default>
		</menubar>
		
		<controls>
