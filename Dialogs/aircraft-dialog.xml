<?xml version="1.0"?>

<PropertyList>

  <name>aircraft-dialog</name>
  <modal>false</modal>
  <layout>vbox</layout>
  <padding>20</padding>

  <group>
    <layout>hbox</layout>
    <empty><stretch>true</stretch></empty>
    <text>
      <label>Aircraft Options</label>
    </text>
    <empty><stretch>true</stretch></empty>

    <button>
      <legend/>
      <key>Esc</key>
      <pref-width>16</pref-width>
      <pref-height>16</pref-height>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>
  </group>

  <hrule/>

  <group>

    <layout>vbox</layout>

    <text>
      <row>1</row>
      <col>0</col>
      <halign>left</halign>
      <label>Model Type</label>
    </text>

    <hrule/>

    <group>
      <layout>table</layout>

      <text>
        <row>0</row>
        <col>0</col>
        <halign>right</halign>
        <label>Dirtiness:</label>
      </text>

    </group>

    <button>
      <legend>  OK  </legend>
      <default>true</default>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>
  </group>

</PropertyList>

